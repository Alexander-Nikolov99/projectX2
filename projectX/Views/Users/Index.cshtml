@model IEnumerable<projectX.Models.User>

<h1>Users</h1>

<a asp-action="Create" class="btn btn-primary">Add New User</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
			<th>Username</th>
            <th>Password</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.Password</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
