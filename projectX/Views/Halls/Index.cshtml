@model IEnumerable<projectX.Models.Hall>

<h1>Halls</h1>

<a asp-action="Create" class="btn btn-primary">Add New Hall</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Capacity</th>
            <th>Cinema</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hall in Model)
        {
            <tr>
                <td>@hall.Id</td>
                <td>@hall.Capacity</td>
                <td>@hall.Cinema?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@hall.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@hall.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
