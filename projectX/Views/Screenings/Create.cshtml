@model projectX.Models.Screening

@{
    ViewData["Title"] = "Create Screening";
}

<h2>Create Screening</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ScreeningTime" class="control-label"></label>
        <input asp-for="ScreeningTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="ScreeningTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Cinemas">Cinemas</label>
        <select id="Cinemas" name="selectedCinemas" class="form-control" single>
            @if (ViewData["Cinemas"] is MultiSelectList cinemasList && cinemasList != null)
            {
                foreach (var item in cinemasList)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            }
            else
            {
                <option disabled>No cinemas available</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
